# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/portfolio
# OR use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/portfolio

# JWT Secret (change this to a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ImageKit (Alternative image service)
# Sign up at https://imagekit.io
# Get credentials from: Dashboard → Developer Options → API Keys
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/endpoint_username/

# Admin Default Credentials (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin@123
